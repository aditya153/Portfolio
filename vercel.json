{
    "version": 2,
    "buildCommand": "npm install && npm run build",
    "outputDirectory": "dist/public",
    "installCommand": "npm install",
    "functions": {
        "server/index.ts": {
            "runtime": "@vercel/node"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ]
}